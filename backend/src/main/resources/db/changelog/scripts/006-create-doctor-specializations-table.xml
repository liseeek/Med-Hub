<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet author="lissz" id="006">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="doctor_specializations"/>
            </not>
        </preConditions>

        <createTable tableName="doctor_specializations">
            <column name="doctor_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="specialization_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="doctor_specializations" baseColumnNames="doctor_id"
                                 referencedTableName="doctors" referencedColumnNames="doctor_id"
                                 constraintName="fk_doctor_id"/>

        <addForeignKeyConstraint baseTableName="doctor_specializations" baseColumnNames="specialization_id"
                                 referencedTableName="specializations" referencedColumnNames="specialization_id"
                                 constraintName="fk_specialization_id"/>
    </changeSet>

</databaseChangeLog>
